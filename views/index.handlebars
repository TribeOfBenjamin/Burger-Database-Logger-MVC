<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<!--  {{> burgers/burger-block devoured=false}}  -->
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Enter a burger you'd like to eat:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Submit</button>
</form>